{
    "manifest_version": 2,
  
    "name": "HabitPet",
    "description": "Take care of your own productivity companion!",
    "version": "1.0",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_action": {
     "default_title": "HabitPets",
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },

    "permissions": [
     "activeTab",
     "storage",
     "tabs"
     ],

    "options_ui" : {
        "page": "popupShop.html",
        "open_in_tab" : true
    }

  } 
  